{% extends 'base.html.twig' %}

{% block title %}Lieux
{% endblock %}

{% block body %}
	<h1>Lieux</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Nom</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for lieu in lieux %}
				<tr>
					<td>{{ lieu.Nom }}</td>
					<td style="display: flex;">
						<a class="btn btn-primary" href="{{ path('app_lieu_edit', {'id': lieu.id}) }}">Modifier</a>
						{{ include('lieu/_delete_form.html.twig') }}
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">Aucun lieu</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a class="btn btn-primary" href="{{ path('app_lieu_new') }}">Ajouter un nouveau lieu</a>
	<a class="btn btn-primary" href="{{ path('app_releve_index') }}">Relev√©s</a>

{% endblock %}
